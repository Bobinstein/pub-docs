// default from vuepress
.home .hero img
  max-width 450px!important


:root {
  --BgColor: $bgColor;
  --TextColor: $textColor
  --AccentColor: $accentColor
  --fontFamily: $Roboto
  --LineColor: $accentColor
  --LineThickness: 1px
  --PrefixColor: $textColor
  }


// sets background for most items
html, body, .page, .theme-container, .sidebar, .sidebar-group, .sidebar-heading, nav, .navbar, .nav-dropdown, .search-box, .links, header, .next, .prev, .prefix
  background: var(--BgColor) 
  color: var(--TextColor) !important
  font-family: var(--fontFamily)

.search-box
  input, .suggestions
    background: #d3d3d3 !important
    color: black !important
  ul
    background: #d3d3d3 !important
    color: black !important
    li, a
        color: black !important