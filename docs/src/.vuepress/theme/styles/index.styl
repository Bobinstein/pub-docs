.inline-table
  color: black !important
  display inline-table 
  max-width 80%
  tr:nth-child(odd) {
    background-color: #d3d3d3
  }
  tr:nth-child(even) {
    background-color: #f2f2f2
  } 

.caption
  text-align: center
  font-size: .75em

.footnote
  text-align: center
  font-size: .66em

code:not(pre code)
  background: #d3d3d3 !important
  color: var(--AccentColor) !important

h2
  border-bottom: 4px solid var(--LineColor)